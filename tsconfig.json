{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "declaration": true,
    "declarationMap": true, // for VSCode
    "noEmit": true, // only type checking, let babel handle the rest
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop": true // allow import syntax
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
